<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.season.winter.liquor.liquorInfo.LiquorInfo" />
        <import type="com.season.winter.ui.model.fragment.home.BannerData" />

        <variable
            name="liquor_info"
            type="LiquorInfo"/>

        <variable
            name="banner_data"
            type="BannerData"/>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_thumb"
            android:src="@drawable/logo_icon_small"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="300dp"
            app:imageFromFireStoreUrl="@{banner_data.imageUrl}" />
<!--        app:layout_collapseMode="parallax"-->

    </LinearLayout>

</layout>
